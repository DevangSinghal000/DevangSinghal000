def function(x):
    return (2*x**3-2*x-5)
x0=0
x1=2
x2=0
fx0=0
fx1=0
fx2=0
flag= True
cnt=0
while((x1-x2)>=0.01):
    fx0 = function(x0)
    fx1 = function(x1)
    x2 = (x0*fx1-x1*fx0) / (fx1-fx0)
    fx2 = function(x2)
    if (fx2 < 0): x0 = x2
    else: x1 = x2
    if (fx2==0):break
    cnt+=1
    
print(x2,cnt)



